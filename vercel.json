{
  "buildCommand": "pnpm install && pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "functions": {
    "app/api/zkbirthday/**/*.ts": {
      "maxDuration": 10,
      "memory": 512
    },
    "app/api/health/**/*.ts": {
      "maxDuration": 5,
      "memory": 128
    },
    "app/api/**/*.ts": {
      "maxDuration": 30,
      "memory": 1024
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/zk-moments/zkbirthday/quick-add",
      "destination": "/zk-moments/zkbirthday/quick-add"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 