{
  "buildCommand": "pnpm install && pnpm build",
  "devCommand": "pnpm dev",
  "installCommand": "pnpm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "alias": [
    "kair-os.vercel.app"
  ],
  "functions": {
    "app/api/zkbirthday/**/*.ts": {
      "maxDuration": 10
    },
    "app/api/health/**/*.ts": {
      "maxDuration": 5
    },
    "app/api/**/*.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/zk-moments/zkbirthday/quick-add",
      "destination": "/zk-moments/zkbirthday/quick-add"
    },
    {
      "source": "/wof",
      "destination": "/installation/way-of-flowers"
    },
    {
      "source": "/wof-nfc",
      "destination": "/installation/way-of-flowers/wof-nfc"
    },
    {
      "source": "/flowers",
      "destination": "/installation/way-of-flowers"
    },
    {
      "source": "/civic",
      "destination": "/installation/civic-portraits"
    },
    {
      "source": "/portraits",
      "destination": "/installation/civic-portraits"
    },
    {
      "source": "/admin",
      "destination": "/admin/installations"
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 